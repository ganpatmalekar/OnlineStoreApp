<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="36dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="#EF0000"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Online Store"
                android:textSize="26dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developing a user friendly and less time consuming application which will help customers in buying of goods, products (food) online by choosing the listed products from application."
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guided By:"
                android:textSize="26dp"
                android:textStyle="bold"
                android:textColor="#EF0000"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prof. Dr. Vaishali B. Sangvikar"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Design &amp;  Developed By:"
                android:textSize="26dp"
                android:textStyle="bold"
                android:textColor="#EF0000"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chaitali Bhangale\nMahesh Shrigod\nHarshad Pate\nGanpat Malekar"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>